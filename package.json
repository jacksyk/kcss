{
    "name": "dcdcss",
    "displayName": "DcdCss",
    "description": "为dcd css开发提升效率的小工具",
    "version": "0.3.0",
    "icon": "image/icon.png",
    "engines": {
        "vscode": "^1.93.0"
    },
    "publisher": "shuyikang",
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.extractCssClasses",
                "title": "Extract CSS Classes to LESS"
            },
            {
                "command": "extension.verifyCss",
                "title": "Verify CSS"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.extractCssClasses",
                    "group": ""
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.extractCssClasses",
                    "group": ""
                }
            ]
        },
        "keybindings": {
            "command": "extension.extractCssClasses",
            "key": "ctrl+enter",
            "mac": "cmd+enter",
            "when": "editorTextFocus"
        },
        "configuration": {
            "title": "DcdCss",
            "properties": {
                "DcdCss.cssDefaultContent": {
                    "type": "object",
                    "description": "css默认内容",
                    "default": ""
                },
                "DcdCss.showToast": {
                    "type": "boolean",
                    "description": "在每次操作完成之后是否展示提示信息",
                    "default": true
                }
            }
        },
        "snippets": [
            {
                "language": "less",
                "path": "./src/snippets/color.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.93.0",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.9.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.4",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "fs-extra": "^11.2.0"
    }
}
